# ============================================
# ECHO MUSIC SERVER - Environment Variables
# ============================================
#
# Copy this file to .env and configure with your values
# cp .env.example .env
#

# ============================================
# DATABASE (PostgreSQL)
# ============================================
DATABASE_URL="postgresql://music_admin:your_secure_password@localhost:5432/music_server"

# For docker-compose.prod.yml
POSTGRES_USER=music_admin
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=music_server
POSTGRES_PORT=5432

# ============================================
# JWT AUTHENTICATION
# ============================================
# Generate secure secrets:
#   openssl rand -base64 32
#
JWT_SECRET="CHANGE_ME_GENERATE_A_SECURE_256_BIT_KEY"
JWT_EXPIRATION="24h"
JWT_REFRESH_SECRET="CHANGE_ME_GENERATE_ANOTHER_SECURE_256_BIT_KEY"
JWT_REFRESH_EXPIRATION="7d"

# ============================================
# APPLICATION
# ============================================
NODE_ENV="development"
PORT=3000
APP_PORT=3000
API_PREFIX="api"

# ============================================
# CORS
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGINS="http://localhost:5173,http://localhost:3000"

# ============================================
# FILE STORAGE
# ============================================
# Where music files are stored
UPLOAD_PATH="./uploads/music"
COVERS_PATH="./uploads/covers"

# ============================================
# REDIS & CACHE
# ============================================
REDIS_HOST="localhost"
REDIS_PORT=6379
# REDIS_PASSWORD=""  # Optional - set in production

# Enable/disable Redis cache (default: true)
ENABLE_CACHE=true

# ============================================
# SECURITY
# ============================================
# bcrypt rounds for password hashing (10-12 recommended)
BCRYPT_ROUNDS=12

# ============================================
# CACHE TTL (Time To Live in seconds)
# ============================================
CACHE_TRACK_TTL=3600      # 1 hour
CACHE_ALBUM_TTL=3600      # 1 hour
CACHE_ARTIST_TTL=7200     # 2 hours

# ============================================
# OPTIONAL FEATURES
# ============================================
# Add any additional configuration here
