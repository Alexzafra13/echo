{
  "name": "echo-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Echo - Music Streaming Platform (Monorepo)",
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=22.17.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.18.3",
  "scripts": {
    "install:first": "bash scripts/setup.sh",
    "install:first:windows": "powershell -ExecutionPolicy Bypass -File scripts/setup.ps1",
    "quickstart": "bash scripts/quickstart.sh",
    "quickstart:windows": "powershell -ExecutionPolicy Bypass -File scripts/quickstart.ps1",
    "reset": "bash scripts/reset-and-init.sh",
    "dev": "pnpm --filter echo-server-backend dev",
    "dev:all": "concurrently -n \"server,client\" -c \"bgBlue.bold,bgMagenta.bold\" \"pnpm --filter echo-server-backend dev\" \"pnpm --filter echo-frontend dev\"",
    "dev:all:legacy": "pnpm --parallel --filter echo-server-backend --filter echo-frontend dev",
    "build": "pnpm --filter echo-frontend build && pnpm --filter echo-server-backend build",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f echo-app",
    "docker:restart": "docker-compose restart echo-app",
    "db:reset": "cd server && pnpm db:reset",
    "db:migrate": "cd server && pnpm db:migrate",
    "db:generate": "cd server && pnpm db:generate",
    "clean": "pnpm --recursive exec rm -rf node_modules dist coverage"
  },
  "keywords": [
    "monorepo",
    "music-streaming",
    "nestjs",
    "react",
    "typescript"
  ],
  "dependencies": {
    "@fastify/multipart": "^9.3.0",
    "@nestjs/platform-socket.io": "^11.1.8",
    "@nestjs/websockets": "^11.1.8",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "socket.io-client": "^4.8.1"
  }
}
