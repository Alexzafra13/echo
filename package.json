{
  "name": "echo-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Echo - Music Streaming Platform (Monorepo)",
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=22.17.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.18.3",
  "scripts": {
    "install:first": "bash scripts/setup.sh",
    "install:first:windows": "powershell -ExecutionPolicy Bypass -File scripts/setup.ps1",
    "quickstart": "bash scripts/quickstart.sh",
    "quickstart:windows": "powershell -ExecutionPolicy Bypass -File scripts/quickstart.ps1",
    "install:all": "pnpm install",
    "dev": "pnpm --filter echo-server-backend dev",
    "dev:server": "pnpm --filter echo-server-backend dev",
    "dev:frontend": "pnpm --filter echo-frontend dev",
    "dev:all": "pnpm --parallel --filter echo-server-backend --filter echo-frontend dev",
    "build": "pnpm --filter echo-frontend build && pnpm --filter echo-server-backend build",
    "build:server": "pnpm --filter echo-server-backend build",
    "build:frontend": "pnpm --filter echo-frontend build",
    "test": "pnpm --filter echo-server-backend test",
    "test:server": "pnpm --filter echo-server-backend test",
    "test:frontend": "pnpm --filter echo-frontend test",
    "test:e2e": "pnpm --filter echo-server-backend test:e2e",
    "test:cov": "pnpm --filter echo-server-backend test:cov",
    "docker:dev": "bash scripts/compose.sh up -d",
    "docker:dev:down": "bash scripts/compose.sh down",
    "docker:dev:logs": "bash scripts/compose.sh logs -f",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f echo-app",
    "docker:restart": "docker-compose restart echo-app",
    "docker:health": "docker-compose ps && docker inspect --format='{{.State.Health.Status}}' echo-postgres echo-redis echo-app 2>/dev/null || echo 'Health check not available'",
    "deploy:build": "pnpm build && docker-compose build",
    "deploy:push": "docker-compose push",
    "deploy:prod": "pnpm deploy:build && pnpm deploy:push && docker-compose up -d",
    "db:migrate": "cd server && pnpm db:migrate",
    "db:seed": "cd server && pnpm db:seed",
    "db:reset": "cd server && pnpm db:reset",
    "db:studio": "cd server && pnpm db:studio",
    "db:generate": "cd server && pnpm db:generate",
    "logs:server": "docker-compose logs -f echo-app",
    "logs:db": "bash scripts/compose.sh logs -f postgres",
    "logs:redis": "bash scripts/compose.sh logs -f redis",
    "clean": "pnpm --recursive exec rm -rf node_modules dist coverage .next",
    "lint": "pnpm --recursive exec eslint",
    "lint:server": "pnpm --filter echo-server-backend lint",
    "lint:frontend": "pnpm --filter echo-frontend lint",
    "format": "pnpm --recursive exec prettier --write",
    "format:server": "pnpm --filter echo-server-backend format",
    "format:frontend": "pnpm --filter echo-frontend format"
  },
  "keywords": [
    "monorepo",
    "music-streaming",
    "nestjs",
    "react",
    "typescript"
  ],
  "dependencies": {
    "@fastify/multipart": "^9.3.0",
    "@nestjs/platform-socket.io": "^11.1.8",
    "@nestjs/websockets": "^11.1.8",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "socket.io-client": "^4.8.1"
  }
}
