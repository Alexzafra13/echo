# Auto-approve build scripts for critical packages
enable-pre-post-scripts=true

# Allow builds from trusted packages
onlyBuiltDependencies[]=ffmpeg-static
onlyBuiltDependencies[]=@ffprobe-installer/ffprobe

# Network resilience for CI/Docker builds
fetch-retries=5
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000
fetch-timeout=60000
