# ============================================
# Echo Server - Desarrollo Local
# ============================================
# Copia: cp .env.example .env
# Las credenciales coinciden con docker-compose.dev.yml

NODE_ENV=development
PORT=3000
API_PREFIX=api

# Base de datos (docker-compose.dev.yml)
DATABASE_URL=postgresql://music_user:music_password@localhost:5432/music_db

# JWT (solo desarrollo - producci√≥n auto-genera)
JWT_SECRET=dev-secret-change-in-production-min-32-chars
JWT_REFRESH_SECRET=dev-refresh-secret-change-in-production
JWT_EXPIRATION=7d
JWT_REFRESH_EXPIRATION=30d

# Redis (docker-compose.dev.yml)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=dev_redis_password

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Archivos
MUSIC_LIBRARY_PATH=/music
UPLOAD_PATH=./uploads/music
COVERS_PATH=./uploads/covers

# Cache
ENABLE_CACHE=true
CACHE_TRACK_TTL=3600
CACHE_ALBUM_TTL=3600
CACHE_ARTIST_TTL=7200
