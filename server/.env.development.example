# ============================================
# DEVELOPMENT ENVIRONMENT
# ============================================
# Local development configuration
# Port: 3000 (localhost only)
# Services: All exposed for debugging

# Environment
NODE_ENV=development
PORT=3000
HOST=localhost

# Database (exposed on localhost:5432)
# ⚠️ Use 'localhost' if running from your PC, 'postgres' if running inside Docker
DATABASE_URL=postgresql://music_user:music_password@localhost:5432/music_db?schema=public
POSTGRES_USER=music_user
POSTGRES_PASSWORD=music_password
POSTGRES_DB=music_db

# Redis (exposed on localhost:6379)
# ⚠️ Use 'localhost' if running from your PC, 'redis' if running inside Docker
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=dev_redis_password

# JWT (use simple secrets for dev)
JWT_SECRET=dev-jwt-secret-do-not-use-in-production
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=dev-refresh-secret-do-not-use-in-production
JWT_REFRESH_EXPIRATION=30d

# CORS (allow all for dev)
CORS_ORIGINS=*

# Cache
ENABLE_CACHE=true
CACHE_ALBUM_TTL=3600
CACHE_TRACK_TTL=3600
CACHE_ARTIST_TTL=7200

# File Storage
# ⚠️ UPLOAD_PATH is where the scanner will look for music files
# For local development (Windows): Use Windows paths like C:/Users/YourName/Music
# For local development (Linux/Mac): Use ./uploads/music or absolute paths
# For Docker: Use /app/uploads/music (mapped via volumes)
UPLOAD_PATH=./uploads/music
COVERS_PATH=./uploads/covers

# Bcrypt
BCRYPT_ROUNDS=10
