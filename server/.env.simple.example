# ============================================
# Echo Music Server - Configuration
# ============================================
# Copy this file to .env OR run: node scripts/generate-env.js
# The script auto-generates secure JWT secrets.

# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
PORT=3000
HOST=localhost

# ============================================
# DATABASE (PostgreSQL)
# ============================================
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://music_user:music_password@localhost:5432/music_db?schema=public

# ============================================
# REDIS CACHE
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=dev_redis_password

# ============================================
# JWT SECURITY
# ============================================
# IMPORTANT: Generate secure secrets for production!
# Run: node -e "console.log(require('crypto').randomBytes(64).toString('base64'))"
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION
JWT_REFRESH_SECRET=CHANGE_THIS_TOO_IN_PRODUCTION
JWT_EXPIRATION=7d
JWT_REFRESH_EXPIRATION=30d

# ============================================
# FILE STORAGE
# ============================================
UPLOAD_PATH=./uploads/music
COVERS_PATH=./uploads/covers

# ============================================
# CORS (for development)
# ============================================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
