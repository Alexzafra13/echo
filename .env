# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://music_admin:music_password@localhost:5432/music_server"

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_SECRET="change-this-to-a-secure-random-256-bit-key-in-production"
JWT_EXPIRATION="24h"
JWT_REFRESH_SECRET="change-this-to-another-secure-random-256-bit-key"
JWT_REFRESH_EXPIRATION="7d"

# ============================================
# APPLICATION
# ============================================
NODE_ENV="development"
PORT=3000
API_PREFIX="api"

# ============================================
# CORS
# ============================================
CORS_ORIGINS="http://localhost:5173,http://localhost:3000"

# ============================================
# FILE STORAGE
# ============================================
UPLOAD_PATH="./uploads/music"
COVERS_PATH="./uploads/covers"

# ============================================
# REDIS & CACHE
# ============================================
REDIS_HOST="localhost"
REDIS_PORT=6379
# REDIS_PASSWORD=""  # Opcional

# Enable/disable Redis cache (default: true)
ENABLE_CACHE=true

# ============================================
# SECURITY
# ============================================
BCRYPT_ROUNDS=12

# ============================================
# CACHE TTL (Time To Live en segundos)
# ============================================
CACHE_TRACK_TTL=3600      # 1 hora
CACHE_ALBUM_TTL=3600      # 1 hora
CACHE_ARTIST_TTL=7200     # 2 horas
