{
  "name": "echo-api",
  "version": "0.1.0",
  "description": "Echo Music Server - Backend API",
  "main": "dist/src/main",
  "license": "ISC",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "packageManager": "pnpm@10.18.3",
  "scripts": {
    "setup:env": "node scripts/generate-env.js",
    "dev": "nest start --watch",
    "build": "nest build",
    "start": "node dist/src/main",
    "start:prod": "node dist/src/main",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:reset": "node scripts/db-reset.js",
    "db:seed": "tsx src/infrastructure/database/seed.ts",
    "test": "jest",
    "test:unit": "jest --config jest-unit.config.js",
    "test:integration": "jest --config jest-integration.config.js --runInBand",
    "test:e2e": "jest --config jest-e2e.config.js --forceExit",
    "test:all": "pnpm test:unit && pnpm test:integration && pnpm test:e2e",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix"
  },
  "dependencies": {
